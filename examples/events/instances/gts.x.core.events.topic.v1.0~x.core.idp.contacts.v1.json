{
  "$schema": "../schemas/gts.x.core.events.topic.v1.0~.schema.json",
  "id": "gts.x.core.events.topic.v1.0~x.core.idp.contacts.v1.0",
  "name": "users",
  "description": "User-related events (creation, profile changes, etc.)",
  "retention": "P30D",
  "ordering": "by-partition-key",
  "partitions": 8,
  "partitionKeyPath": "/key",
  "dedup": {
    "strategy": "time-window",
    "window": "PT10M",
    "keyPaths": ["/typeId", "/payload/userId"]
  },
  "storage": {
    "kind": "elk",
    "config": { "indexPrefix": "acme-users-events" }
  },
  "tags": ["pii", "iam"]
}
